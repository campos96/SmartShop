@model IEnumerable<SmartShop.Core.Models.ProductDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetworkStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetworkCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorageCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatteryLife)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetworkStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetworkCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StorageCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryLife)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Brand)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
