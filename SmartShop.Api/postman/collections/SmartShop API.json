	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"var apiUrl = pm.environment.get(\"ApiUrl\");",
					"var username = pm.environment.get(\"ClientUsername\");",
					"var password = pm.environment.get(\"ClientPassword\");",
					"var getToken = true;",
					"",
					"if (!pm.environment.get('AccessTokenExpiry') && !pm.environment.get('AuthToken') || pm.environment.get('AuthToken') == \"\") {",
					"    console.log('Token or expiry date are missing')",
					"} else if (pm.environment.get('AccessTokenExpiry') <= (new Date()).getTime()) {",
					"    console.log('Token is expired')",
					"} else {",
					"    getToken = false;",
					"    console.log('Token and expiry date are ok');",
					"}",
					"",
					"if (getToken === true) {",
					"    pm.sendRequest({",
					"        url: apiUrl + '/account/login',",
					"        method: 'POST',",
					"        body: {",
					"            mode: 'raw',",
					"            raw: JSON.stringify({",
					"                \"username\": username,",
					"                \"password\": password",
					"            }),",
					"            options: {",
					"                raw: { language: 'json' }",
					"            }",
					"        }",
					"    }, function (error, response) {",
					"        var responseJson = response.json();",
					"        var expiryDate = new Date();",
					"        expiryDate.setSeconds(expiryDate.getSeconds() + responseJson.authenticationResult.expiresIn);",
					"        pm.environment.set('AccessTokenExpiry', expiryDate.getTime());",
					"        pm.environment.set(\"AuthToken\", responseJson.authenticationResult.accessToken);",
					"    });",
					"}"
				],
				"id": "1352653a-7026-4338-a287-0ffcb04eff55"
			}
